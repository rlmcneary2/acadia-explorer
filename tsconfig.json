{
    "compileOnSave": false,
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": false, // This must be false for the React imports to work at both build and run times.
        "alwaysStrict": true,
        "baseUrl": ".",
        "inlineSources": false,
        "jsx": "preserve",
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017"
        ],
        "module": "es2015",
        "moduleResolution": "node",
        "noEmitOnError": false,
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "outDir": "ts-temp",
        "paths": {
            "@action/*": [
                "src/app/action/*"
            ],
            "@controls/*": [
                "src/app/view/common/controls/*"
            ],
            "@reducer/*": [
                "src/app/reducer/*"
            ]
        },
        "preserveConstEnums": true,
        "removeComments": false,
        "sourceMap": true,
        "suppressImplicitAnyIndexErrors": false,
        "target": "es2017"
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ]
}